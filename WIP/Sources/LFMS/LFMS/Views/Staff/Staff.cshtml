        $('#detailStaffBankBranch', editFr).val(allStaff[index].BankBranch);
        $('#detailStaffPhone', editFr).val(allStaff[index].Mobile);
        if (allStaff[index].Sex == 'Nam') {
            $('#genderMale', editFr).prop("checked", true);
        } else if (allStaff[index].Sex == 'Nữ') {
            $('#genderFemale', editFr).prop("checked", true);
