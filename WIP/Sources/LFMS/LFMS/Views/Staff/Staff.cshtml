    function SetStatusStaff(id, username) {
        $(ace.click_event, function () {
            bootbox.confirm("Bạn có muốn thực hiện thao tác này?", function (result) {
                if (result) {
                    $.post("/Staff/SetStatusStaff", { staffId: id }
                    , function (result) {
                        if (result == "active") {
                            getUpdateStaff();
                            notification(username + " đã hoạt động lại!", "", 2000, "btn-primary center");
                        } if (result == "inactive") {
                            getUpdateStaff();
                            notification(username + " đã ngừng hoạt động!", "", 2000, "btn-primary center");
                        }
                        else if (result == 'Error') {
                            notification("Thay đổi hoạt động nhân viên thất bại!", "Hãy kiểm tra lại kết nối database.", 3000, "gritter-error center");
                        } else if (result == 'ErrorPermission') {
                            notification("Thay đổi hoạt động nhân viên thất bại!", "Bạn không có quyền thay đổi này!", 3000, "gritter-error center");
                        }
                    }).error(function () {
                        notification("Thay đổi hoạt động nhân viên thất bại!", "Có lỗi xảy ra trong quá trình xóa nhân viên.", 3000, "gritter-error center");
                    });
                    $('.close').click();
                }
            });
        });
    }
