<div id="tblAddGroup" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Thêm nhóm nhân viên
                </div>
            </div>
            <form class="modal-body no-padding" id="addGroupValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên nhóm nhân viên</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtGroupName" name="txtGroupName" style="width: 100%" />

                            </div>
                            <div  id="existStaffGroupError" style="display: none">
                                <span style="color: red">Tên nhóm nhân viên đã tồn tại!</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Chi tiết nhóm nhân viên</label><span style="color: red"> *</span>
                            <div>
                                <textarea id="txtGroupDetail" class=" form-control" name="txtGroupDetail" style="resize: none"></textarea>
                                @*<textarea style="width: 100%" id="txtGroupDetail" name="txtGroupDetail"></textarea>*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Lương cơ bản(VNĐ)</label><span style="color: red"> *</span>
                            <div>
                                @*<input type="text" id="txtBaseSalary" name="txtBaseSalary" style="width: 100%" maxlength="9"/>*@
                                <input type="text" id="txtBaseSalary" class=" form-control" name="txtBaseSalary" maxlength="9" onclick='removeMask("#txtBaseSalary")' onblur='    maskMoney("#txtBaseSalary")' />

                             </div>
                            
                        </div>
                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>
            <div class="modal-footer no-margin-top">
                <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" type="button" data-bb-handler="confirm" id="btnAddNewCase" onclick="addStaffGroup()">
                    <i class="icon-ok"></i>
                    Thêm mới
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@*bảng để hiện view và edit*@
<div id="tblUpdateGroup" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Chi tiết nhóm nhân viên
                </div>
            </div>

            <form class="modal-body no-padding" id="updateGroupValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên nhóm nhân viên</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtGroupId" style="display: none" />
                                <input type="text" id="txtEditName" name="txtGroupName" style="width: 100%" class="editableInput" disabled />

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Chi tiết nhóm nhân viên</label><span style="color: red"> *</span>
                            <div>
                                <textarea id="txtEditDetail" class="editableInput form-control" name="txtGroupDetail" style="resize: none"></textarea>
                                @*<textarea style="width: 100%" id="txtGroupDetail" name="txtGroupDetail" class="editableInput" disabled></textarea>*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Lương cơ bản(VNĐ)</label><span style="color: red"> *</span>
                            <div>
                                @*<input type="text" id="txtEditMoney" name="txtBaseSalary" style="width: 100%" class="editableInput" disabled maxlength="9" />*@
                                <input type="text" id="txtEditMoney" class="editableInput form-control" name="txtBaseSalary" maxlength="9" onclick='removeMask("#txtEditMoney")' onblur='    maskMoney("#txtEditMoney")' />

                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>

            <div class="modal-footer no-margin-top">
                <button class="btn btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" onclick="updateGroup()" style="display:none" id="disablebutton2">
                    <i class="icon-ok"></i>
                    Lưu chỉnh sửa
                </button>
                <button class="btn btn-primary" onclick="enablebutton2()" id="enablebutton2">
                    <i class="icon-edit"></i>
                    Chỉnh Sửa
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
