
@*List CustomerGroup*@
<div class="table-responsive" id="">
    <a data-toggle="modal">
        <button class="btn btn-primary" id="btnAdd" data-toggle="modal" href="#tblAddCustomerGroup">
            <i class="icon-plus"></i>
            Thêm nhóm khách hàng
        </button>
    </a>
    <hr>
    <table id="tblCustomerGroup" class="table table-striped table-bordered table-hover" width:"100%">
        <thead>
            <tr>
                <th width="35%">Tên nhóm khách hàng</th>

                <th >Mô tả</th>

                <th width="15%"></th>
            </tr>
        </thead>
    </table>
</div>

@*Add CustomerGroup*@
<div id="tblAddCustomerGroup" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Thêm Nhóm Khách Hàng
                </div>
            </div>
            <div class="modal-body no-padding">
                <form class="modal-body no-padding" id="addCustomerGroupValidateForm">
                    <div class="col-sm-12">
                        <div>
                            <br />
                            <div class="form-group">
                                <label>Tên nhóm khách hàng:</label><span style="color: red"> *</span>
                                <div>
                                    <input type="text" id="txtGroupName" name="txtGroupName" style="width: 100%" maxlength="50"/>

                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mô tả:</label>
                                <div>
                                    <textarea id="txtDescription" class=" form-control" name="txtDescription" style="resize: none"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer no-margin-top">
                    </div>
                </form>
            </div>
            <div class="modal-footer no-margin-top"></div>
            <div class="modal-footer no-margin-top">
                <div>
                    <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                    <button class="btn btn-success pull-right" type="button" id="btnAddNewCustomerGroup" onclick="addCustomerGroup()" >
                        <i class="icon-ok">
                        </i>
                        Thêm mới
                    </button>
                </div>
            </div>

        </div><!-- /.modal-content -->
    </div>
</div>

@*CustomerGroup Detail*@
<div id="tblCustomerGroupDetail" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Chi Tiết Nhóm Khách Hàng
                </div>
            </div>

            <div class="modal-body no-padding">
                <form class="modal-body no-padding" id="updateCustomerGroupValidateForm">
                    <div class="col-sm-12">
                        <div>
                            <br />
                            <div class="form-group">
                                <label>Tên nhóm khách hàng:</label><span style="color: red"> *</span>
                                <div>
                                    <input type="text" id="detailCustomerGroupId" style="display: none" />
                                    <div><input type="text" id="detailName" name="txtGroupName" class="editableSelect" style="width: 100%" maxlength="50"/></div>
                                </div>
                                <div id="existStaffGroupError" style="display: none">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mô tả:</label>
                                <div>
                                    <textarea id="detailDescription" class="editableSelect form-control" name="txtDescription" style="resize: none"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer no-margin-top">
                    </div>
                </form>
            </div>
            <div class="modal-footer no-margin-top"></div>
            <div class="modal-footer no-margin-top">
                <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" onclick="updateCustomerGroup()" style="display:none; " id="disablebutton">
                    <i class="icon-ok"></i>
                    Lưu chỉnh sửa
                </button>
                <button class="btn btn-primary" onclick="enablebutton()" id="enablebutton">
                    <i class="icon-edit"></i>
                    Chỉnh Sửa
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

