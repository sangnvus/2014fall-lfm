<div class="row">
    <div class="col-sm-12">
        <h3 class="header smaller lighter green">
            <span data-rel="tooltip" title="Sửa danh sách chủ thể" class="tooltip-info">
                <i class="icon-edit bigger-160" onclick="showEditSubject()" style="cursor: pointer"></i>
            </span>
            Chủ thể liên quan
        </h3>

        <div>
            <table id="tblSubjectRelated" class="table table-striped table-bordered table-hover" width="100%">
                <thead>
                    <tr>
                        <th width="20%">Họ và tên</th>
                        <th width="15%">Tư cách tố tụng</th>
                        <th width="25%">Địa chỉ</th>
                        <th width="10%">Điện thoại</th>
                        <th width="20%">Email</th>
                        <th width="10%" style="display: none" class="center showHideColumnSubject"></th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="row" style="display: none" id="btnEditGroupSubject">
            <div class="col-sm-6">
                <a href="#modalSubjectRelated" role="button" class="green" data-toggle="modal">
                    <button class="blue btn btn-primary" onclick="prepareForAddSubject()">
                        <i class="icon-plus"></i>
                        Tạo chủ thể
                    </button>
                </a>
            </div>
            <div class="col-sm-6">
                <button style="float:right" class="blue btn btn-success" onclick="hideEditSubject()">
                    <i class="icon-ok"></i>
                    Hoàn Thành
                </button>
            </div>
        </div>
    </div>

    <div id="modalSubjectRelated" class="modal fade" tabindex="-1">
        <div class="modal-dialog" style="width: 80%; min-width: 400px; max-width: 900px">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">&times;</span>
                        </button>
                        Thông tin chủ thể
                    </div>
                </div>

                <div class="modal-body no-padding">
                    <div class="col-xs-12" style="padding-top: 20px">
                        <form id="subjectValidateForm">
                            <div class="row">
                                <input type="text" id="txtSubjectId" style="display: none">

                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Tên chủ thể: <span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <div>
                                            <input type="text" id="txtSubjectName" name="txtSubjectName" style="width:100%">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Tư cách tố tụng: <span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtLitigationCapacity" name="txtLitigationCapacity" style="width:100%"></div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Điện thoại:</label>
                                    <div class="col-sm-8 input-group">
                                        <span class="input-group-addon"> <i class="icon-phone"></i> </span>
                                        <input type="text" id="txtSubjectPhoneNumber" name="txtSubjectPhoneNumber" style="width:100%">
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Email:</label>
                                    <div class="col-sm-8">
                                        <div>
                                            <input type="text" id="txtSubjectEmail" name="txtSubjectEmail" style="width:100%">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <label class="col-sm-2">Địa chỉ:</label>
                                    <div class="col-sm-10">
                                        <input type="text" id="txtSubjectAddress" style="width:100%">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="modal-footer no-margin-top"></div>
                <div class="modal-footer no-margin-top">
                    <button class="btn btn-grey pull-left" type="button" data-dismiss="modal" id="btnCloseSubject">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                    <button class="btn btn-success" type="button" data-bb-handler="confirm" id="btnAddSubject" onclick="addSubject()">
                        <i class="icon-ok"></i>
                        Thêm mới 
                    </button>
                    <button class="btn btn-success" type="button" data-bb-handler="confirm" id="btnUpdateSubject" onclick="updateSubject()">
                        <i class="icon-save"></i>
                        Lưu chỉnh sửa
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
</div>