<div class="row">
    <div class="col-sm-12">
        <h3 class="header smaller lighter green">
            <span data-rel="tooltip" title="Sửa danh sách luật sư" class="tooltip-info">
                <i class="icon-edit bigger-160" onclick="showEditLawyer()" style="cursor: pointer"></i>
            </span>
            Luật sư phụ trách
        </h3>

        <div>
            <table id="tblLawyerRelated" class="table table-striped table-bordered table-hover" width="100%">
                <thead>
                    <tr>
                        <th width="10%"></th>
                        <th width="15%">Họ và tên</th>
                        <th width="10%">Tên sử dụng</th>
                        <th width="20%">Chức vụ</th>
                        <th width="15%">Tình trạng</th>
                        <th width="10%">Điện thoại</th>
                        <th width="15%">Email</th>
                        <th width="5%" style="display: none" class="center showHideColumnLawyer"></th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="row" style="display: none" id="btnEditGroupLawyer">
            <div class="col-sm-5">
                <select class="chosen-select" name="selectLawyerRelated" id="selectLawyerRelated">
                    <option value=""></option>
                </select>
            </div>
            <div class="col-sm-4">
                <button class="blue btn btn-primary" onclick="addLawyerRelated()">
                    <i class="icon-plus"></i>
                    Thêm vào danh sách
                </button>
            </div>
            <div class="col-sm-3">
                <button style="float:right" class="blue btn btn-success" onclick="hideEditLawyer()">
                    <i class="icon-ok"></i>
                    Hoàn Thành
                </button>
            </div>
        </div>
    </div>

    <div id="modalLawyerRelated" class="modal fade" tabindex="-1">
        <div class="modal-dialog" style="width: 90%; min-width: 400px; max-width: 1000px">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">&times;</span>
                        </button>
                        Thông tin luật sư
                    </div>
                </div>

                <form class="modal-body no-padding">
                    <div class="col-sm-3">
                        <div class="space"></div>

                        <div class="form-group">
                            <center>
                                <span class="profile-picture" style="width: 91%">
                                    <img id="imgStaffAvatar" style="max-width: 190px; max-height: 190px" src="/Content/avatars/no-avatar.png">
                                </span>
                            </center>
                        </div>

                        <div class="form-group">
                            <label>Tên nhân viên</label>
                            <div>
                                <input type="text" id="txtStaffName" style="width: 100%" readonly />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <div>
                                <input type="text" id="txtStaffUsername" style="width: 100%" readonly />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Chức vụ</label>
                            <div>
                                <input type="text" id="txtStaffPosition" style="width: 100%" readonly />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Giới tính</label>
                            <div>
                                <input type="text" id="txtStaffSex" style="width: 100%" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-5">
                        <div class="space"></div>
                        
                        <div class="form-group">
                            <label>Nhóm</label>
                            <div>
                                <input type="text" id="txtStaffGroupName" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ngày sinh</label>
                            <div>
                                <input type="text" id="txtStaffDateOfBirth" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Nơi sinh</label>
                            <div>
                                <input type="text" id="txtStaffPlaceOfBirth" style="width: 100%" readonly />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Điện thoại di động</label>
                            <div>
                                <input type="text" id="txtStaffMobile" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Điện thoại cố định</label>
                            <input type="text" id="txtStaffTelephone" style="width: 100%" readonly />
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <div>
                                <input type="text" id="txtStaffEmail" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Địa chỉ</label>
                            <div> 
                                <input type="text" id="txtStaffAddress" style="width: 100%" readonly />
                            </div>
                        </div>
                        <div id="listOfficeDiv" class="form-group">
                            <label>Thuộc văn phòng</label>
                            <div>
                                <select class="chosen-select" name="cboOffice2" id="cboOffice2" multiple="" disabled>
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="space"></div>

                        <div class="form-group">
                            <label>Vai trò </label>
                            <div>
                                <input type="text" id="txtStaffRole" style="width: 100%" readonly />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Số CMND</label>
                            <div>
                                <input type="text" id="txtStaffIdentityNumber" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ngày Cấp CMND</label>
                            <div>
                                <input type="text" id="txtStaffIdentityDate" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Nơi cấp CMND</label>
                            <div>
                                <input type="text" id="txtStaffIdentityPlace" style="width: 100%" readonly />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Mã số thuế</label>
                            <div>
                                <input type="text" id="txtStaffTaxCode" style="width: 100%" readonly />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Số tài khoản</label>
                            <input type="text" id="txtStaffBankAccount" style="width: 100%" readonly />
                        </div>

                        <div class="form-group">
                            <label>Chi nhánh ngân hàng</label>
                            <input type="text" id="txtStaffBankBranch" style="width: 100%" readonly />
                        </div>
                    </div>
                   
                </form>
            
                <div class="modal-footer no-margin-top"></div>
                <div class="modal-footer no-margin-top">
                    <button class="btn btn-grey" type="button" data-dismiss="modal" id="btnCloseLawyer">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
</div>