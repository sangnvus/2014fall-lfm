<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | LFMS</title>
    <link href="~/Content/logo/LFMS-icon-48.png" rel="icon" />

    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@

    <!-- basic styles -->
    <link href="~/Content/css/main.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- ace styles -->
    <link href="~/Content/css/ace.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/ace-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/ace-skins.min.css" rel="stylesheet" type="text/css" />

    <!-- ace settings handler -->
    <script src="~/Content/js/ace-extra.min.js" type="text/javascript"></script>

    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="~/Content/js/jquery-2.0.3.min.js" type="text/javascript"></script>
    <!-- <![endif]-->
    <script src="~/Content/js/main.js" type="text/javascript"></script>

    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='~/Content/js/jquery-2.0.3.min.js'>" + "<" + "/script>");
    </script>
    <!-- <![endif]-->

    <script type="text/javascript">
        if ("ontouchend" in document && document.ontouchend != null) document.write("<script src='~/Content/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <script src="~/Content/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/js/typeahead-bs2.min.js" type="text/javascript"></script>

    <!-- ace scripts -->
    <script src="~/Content/js/ace-elements.min.js" type="text/javascript"></script>
    <script src="~/Content/js/ace.min.js" type="text/javascript"></script>
    <script src="~/Content/js/md5.js" type="text/javascript"></script>

    @if (IsSectionDefined("HeaderCss"))
    {
        @RenderSection("HeaderCss");
    }

    @if (IsSectionDefined("HeaderJs"))
    {
        @RenderSection("HeaderJs");
    }
</head>

<body>
    <div class="navbar navbar-default" id="navbar">
        <script type="text/javascript">
            try { ace.settings.check('navbar', 'fixed') } catch (e) { }
        </script>

        <div class="navbar-container" id="navbar-container">
            <div class="navbar-header pull-left">
                <a href="~/Home/Index" class="navbar-brand" title="Trang chủ">
                    <small>
                        <img src="~/Content/logo/LFMS-logo-big.png" style="border: none; height: 22px" />
                    </small>
                </a><!-- /.brand -->
            </div><!-- /.navbar-header -->
            @Html.Action("_UserControl", "UserControl")

            @*<div class="navbar-header pull-right">
                    <a class="btn btn-app btn-success btn-xs" href="#" style="width: 40px; height: 40px" title="Tạo hồ sơ mới">
                        <i class="icon-plus"></i>
                    </a>
                </div>*@
        </div><!-- /.container -->
    </div>

    <div class="main-container" id="main-container">
        <script type="text/javascript">
            try { ace.settings.check('main-container', 'fixed') } catch (e) { }
        </script>

        <div class="main-container-inner">

            <div class="main-content" style="margin-left:0">
                @if (IsSectionDefined("Breadcrumbs"))
                {
                    @RenderSection("Breadcrumbs");
                }

                <div class="page-content">
                    <div class="row">
                        <div class="col-xs-12">
                            <!-- PAGE CONTENT BEGINS -->
                            @RenderBody()
                            <!-- PAGE CONTENT ENDS -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.page-content -->
            </div><!-- /.main-content -->

        </div><!-- /.main-container-inner -->

        <a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
            <i class="icon-double-angle-up icon-only bigger-110"></i>
        </a>
    </div><!-- /.main-container -->
    @*@Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)*@
</body>
</html>
