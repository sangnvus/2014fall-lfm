<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <img src="~/Content/logo/LFMS-logo-200.png" width="50px" height="50px" style="border:none" />
                                <span class="white">Law Firm</span>
                                <span class="white">Management System</span>
                            </h1>
                            
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter">
                                            <i class="icon-coffee blue"></i>
                                            Hãy điền thông tin của bạn
                                        </h4>

                                        <div class="space-6"></div>
                                    
                                        <form id="loginForm">
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input id="username" type="text" name="username" class="form-control" placeholder="Tên đăng nhập" />
                                                        <i class="icon-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        <input id="password" type="password" name="password" class="form-control" placeholder="Mật khẩu" />
                                                        <i class="icon-lock"></i>
                                                    </span>
                                                </label>
                                                <div id="failLogin" style="display: none">
                                                    <span style="color: #ff0000">Tên đăng nhập hoặc mật khẩu không đúng!</span>
                                                </div>
                                                <div id="errorLogin" style="display: none">
                                                    <span style="color: #ff0000">Lỗi kết nối đến máy chủ!</span>
                                                </div>
                                                <div id="inactivediv" style="display: none">
                                                    <span style="color: #ff0000">Nhân viên đang ngừng hoạt động!</span>
                                                </div>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    @*<label class="inline">
                                                        <input type="checkbox" class="ace" />
                                                        <span class="lbl"> Ghi nhớ</span>
                                                    </label>*@

                                                    @*<button id="btnLogin" type="button" onclick="loginAccount();" class="width-35 pull-right btn btn-sm btn-primary">*@
                                                    
                                                    <button id="btnLogin" type="button" onclick="loginAccount();" class="btn btn-sm btn-primary" style="width: 100%">
                                                        <i class="icon-key"></i>
                                                        Đăng nhập
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        </form>

                                    </div><!-- /widget-main -->

                                </div><!-- /widget-body -->
                            </div><!-- /login-box -->
                            
                        </div><!-- /position-relative -->
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div>
    </div><!-- /.main-container -->
</body>

<script type="text/javascript">
    $(document).ready(function () {
        $("#username").focus();
    });

    function loginAccount() {
        var username = $("#username").val();
        var password = $.md5($("#password").val());
        $.post("/Login/CheckUser", { username: username, password: password }, function (out) {
            if (out == "susscess") {
                window.location = "../Home/Index";
            } else if (out == "inactive") {
                $('#inactivediv').attr("style", "display: block");
            }
            else {
                $('#failLogin').attr("style", "display: block");
            }
           
        })
            .error(function () {
                $('#errorLogin').attr("style", "display: block");
            });
    }
    
    function keypressHandler(e) {
        if (e.which == 13) {
            $(this).blur();
            $('#btnLogin').focus().click();//give your submit an ID
        }
    }

    $('#loginForm').keypress(keypressHandler);
</script>