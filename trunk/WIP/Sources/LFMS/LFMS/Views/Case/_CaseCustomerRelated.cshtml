<div class="row">
    <div class="col-sm-12">
        <h3 class="header smaller lighter green">
            <span data-rel="tooltip" title="Sửa danh sách khách hàng" class="tooltip-info">
                <i class="icon-edit bigger-160" onclick="showEditCustomer()" style="cursor: pointer"></i>
            </span>
            Khách hàng
        </h3>

        <div>
            <table id="tblCustomerRelated" class="table table-striped table-bordered table-hover" width="100%">
                <thead>
                    <tr>
                        <th width="20%">Họ và tên</th>
                        <th width="15%">Người đại diện</th>
                        <th width="10%">Nhóm</th>
                        <th width="30%">Địa chỉ</th>
                        <th width="10%">Điện thoại</th>
                        <th width="5%" style="display: none" class="center showHideColumnCustomer"></th>
                    </tr>
                </thead>
            </table>
        </div>

        <div class="row" style="display: none" id="btnEditGroupCustomer">
            <div class="col-sm-2">
                <a data-toggle="modal" href="#tblAddCustomer">
                    <button onclick="prepareAddCustomer()" class="btn btn-primary" id="btnAdd">
                        <i class="icon-plus"></i>
                        Tạo khách hàng
                    </button>
                </a>
            </div>
            <div class="col-sm-4">
                <select class="chosen-select" name="selectCustomerRelated" id="selectCustomerRelated">
                    <option value=""></option>
                </select>
            </div>
            <div class="col-sm-2">
                <button class="blue btn btn-success" onclick="addCustomerRelated()">
                    <i class="icon-plus"></i>
                    Thêm vào danh sách
                </button>
            </div>
            <div class="col-sm-4">
                <button style="float:right" class="blue btn btn-success" onclick="hideEditCustomer()">
                    <i class="icon-ok"></i>
                    Hoàn Thành
                </button>
            </div>
        </div>
    </div>

    <div id="modalCustomerRelated" class="modal fade" tabindex="-1">
        <div class="modal-dialog" style="width: 80%; min-width: 400px; max-width: 1000px">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">&times;</span>
                        </button>
                        Thông tin khách hàng:
                    </div>
                </div>

                <form id="updateCustomerValidateForm">
                    <div class="modal-body no-padding">
                        <div class="col-xs-12" style="padding-top: 20px">
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <input type="text" id="detailCustomerId" style="display: none" />
                                    <label class="col-sm-4">Tên khách hàng:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerName" name="txtName" style="width:100%" class="editableInput" >
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Nhóm khách hàng:</label>
                                    <div class="col-sm-8">
                                        <select id="txtCustomerGroup" name="selectCustomerGroup" style="width: 100%; cursor: pointer" class="form-control editableSelect" ></select>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Người đại diện:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <input type="text" name="txtRepresent" id="txtCustomerRepresentative" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Mã số thuế:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerTaxCode" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Ngày sinh:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group input-group-sm">
                                            <input type="text" id="txtCustomerDateOfBirth" data-date-format="dd/mm/yyyy" class="form-control date-picker editableSelect" style="width: 100%; cursor: pointer; " >
                                            <span class="input-group-addon">
                                                <i class="icon-calendar bigger-110"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Số tài khoản:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerBankAccount" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Giới tính:</label>

                                    <div class="col-sm-8">
                                        <label>
                                            <input type="radio" disabled="" class="ace editableGender" value="Nam" name="gender" id="genderMale">
                                            <span class="lbl"> Nam</span>
                                        </label>
                                        <label style="margin-left: 21px">
                                            <input type="radio" disabled="" class="ace editableGender" value="Nữ" name="gender" id="genderFemale">
                                            <span class="lbl"> Nữ</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Tên ngân hàng:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerBankBranch" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Số CMND:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerIdentityNumber" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Ðiện thoại di động:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <input type="text" name="txtMobile" id="txtCustomerMobile" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Ngày cấp CMND:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group input-group-sm">
                                            <input type="text" id="txtCustomerIdentityDate" class="form-control date-picker editableSelect" data-date-format="dd/mm/yyyy"  style="width: 100%; cursor: pointer; " >
                                            <span class="input-group-addon">
                                                <i class="icon-calendar bigger-110"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Ðiện thoại cố định:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerTelephone" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Nơi cấp CMND:</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtCustomerIdentityPlace" data-date-format="dd/mm/yyyy"  class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="col-sm-4">Email:</label>
                                    <div class="col-sm-8">
                                        <input type="text" name="txtEmail" id="txtCustomerEmail" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <label class="col-sm-2">Địa chỉ:<span style="color: red"> *</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" name="txtAddress" id="txtCustomerAddress" class="editableInput" style="width:100%" >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal-footer no-margin-top">
                    <button style="width: 125px; margin-right: 5%;" class="btn btn-grey pull-left" type="button" data-dismiss="modal" id="btnCloseCustomer">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                    <button style="width: 125px; margin-right: 5%;" id="enablebutton" onclick="enablebutton()" class="btn btn-primary pull-right">
                        <i class="icon-edit"></i>
                        Chỉnh Sửa
                    </button>
                    <button id="savebutton" style="width: 125px; margin-right: 5%; display: none" onclick="updateCustomer()" class="btn btn-success pull-right">
                        <i class="icon-ok"></i>
                        Lưu chỉnh sửa
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

    @*Add Customer*@
    <div id="tblAddCustomer" class="modal fade" tabindex="-1">
        <div class="modal-dialog" style="width: 80%; padding-top: 3.4%; min-width: 600px">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">&times;</span>
                        </button>
                        Thêm Khách Hàng Mới
                    </div>
                </div>
                <div class="modal-body no-padding">
                    <form id="addCustomerValidateForm">
                        <div class="col-sm-12" style="padding:2% 2% 1% 2%">
                            <div class="col-sm-6" style="padding-right:20px">
                                <div class="form-group row">
                                    <label class="col-sm-4">Tên khách hàng:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtName" name="txtName" style="width: 100%" /></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Người đại diện:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtRepresent" name="txtRepresent" style="width: 100%" /></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Ngày sinh:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group input-group-sm">
                                            <input class="form-control date-picker" id="datePickerBD" type="text" data-date-format="dd/mm/yyyy" style="width: 100%; cursor: pointer; background: none repeat scroll 0 0 #fff !important" readonly />
                                            <span class="input-group-addon">
                                                <i class="icon-calendar bigger-110"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Ngày cấp CMND:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group input-group-sm">
                                            <input class="form-control date-picker" id="datePickerNC" type="text" data-date-format="dd/mm/yyyy" style="width: 100%; cursor: pointer; background: none repeat scroll 0 0 #fff !important" readonly />
                                            <span class="input-group-addon">
                                                <i class="icon-calendar bigger-110"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Số tài khoản:</label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtBankAccount" style="width: 100%" /></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Mã số thuế:</label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtTaxCode" style="width: 100%" /></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Ðiện thoại di động:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <div class="input-group" style="width: 100%">
                                            <span class="input-group-addon"> <i class="icon-phone"></i> </span>
                                            <input class="form-control input-mask-phone " type="text" id="txtMobile" name="txtMobile" style="width: 100%" />
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="col-sm-6" style="padding-left:20px">
                                <div class="form-group row">
                                    <label class="col-sm-4">Nhóm khách hàng:<span style="color: red"> *</span></label>
                                    <div class="col-sm-8">
                                        <div><select id="selectCustomerGroup" name="selectCustomerGroup" style="width: 100%; cursor: pointer"></select></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Giới tính:</label>
                                    <div class="col-sm-8">
                                        <label>
                                            <input type="radio" class="ace" value="Nam" name="sex" id="sexMale">
                                            <span class="lbl"> Nam</span>
                                        </label>
                                        <label style="margin-left:30px">
                                            <input type="radio" class="ace" value="Nữ" name="sex" id="sexFemale">
                                            <span class="lbl"> Nữ</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Số CMND:</label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtIdentityNum" style="width: 100%" /></div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-4">Nơi cấp CMND:</label>
                                    <div class="col-sm-8">
                                        <div><input type="text" id="txtIdentityPlace" style="width: 100%" /></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Tên ngân hàng</label>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtBankBranch" style="width: 100%" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Email:</label>
                                    <div class="col-sm-8">
                                        <div><input id="txtEmail" name="txtEmail" type="email" style="width: 100%" /></div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-4">Ðiện thoại cố định:</label>
                                    <div class="col-sm-8">
                                        <div class="input-group" style="width: 100%">
                                            <span class="input-group-addon"> <i class="icon-phone"></i> </span>
                                            <input class="form-control input-mask-phone " type="text" id="txtTelephone" name="txtTelephone" style="width: 100%" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 row">
                                <div class="form-group">
                                    <label class="col-sm-2">Địa chỉ:<span style="color: red"> *</span></label>
                                    <div class="col-sm-10">
                                        <div><textarea id="txtAddress" name="txtAddress" style="width: 103%; resize: none "></textarea></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer no-margin-top"></div>
                <div class="modal-footer no-margin-top">
                    <div>
                        <button class="btn btn-warning pull-left" onclick="clearFieldCustomer()" id="" style="width: 125px; margin-left: 5%">
                            <i class="icon-refresh"></i>
                            Làm trống
                        </button>
                        <button class="btn btn-success" type="button" id="btnAddNewCustomer" onclick="addCustomer()" style="width: 125px; margin-right: 5%">
                            <i class="icon-ok">
                            </i>
                            Tạo mới
                        </button>
                    </div>
                </div>

            </div><!-- /.modal-content -->
        </div>
    </div>
</div>