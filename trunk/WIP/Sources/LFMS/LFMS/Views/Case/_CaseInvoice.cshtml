                        </div>

                        <div class="widget-body">
                            <div class="widget-main padding-14">

                                <div class="space"></div>

                                <div style="width:100%">
                                    <table class="table table-striped table-bordered" id="paymentTbl">
                                        <thead>
                                            <tr>
                                                <th class="center" style="width:5%">#</th>
                                                <th class="center">Mô Tả</th>
                                                <th class="center" style="width:15%">Ngày Thanh Toán</th>
                                                <th class="center" style="width:15%">Số Tiền</th>
                                                <th id="editPaymentTh" style="display: none;width:7%" class="center"></th>
                                            </tr>
                                        </thead>


                                    </table>
                                </div>
                                <button onclick="addPaymentPopup()" style="display: none" class="paymentTd blue btn btn-primary" data-toggle="modal" href="#paymentPopup">
                                    <i class="icon-plus"></i>
