    <div id="invoicePopup" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header" id="invoiceHeader">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">&times;</span>
                        </button>
                        Thêm Dịch Vụ:
                    </div>
                </div>

                <form class="modal-body no-padding" id="invoiceValidateForm">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="form-group" style="margin-bottom: 0px">
                                <div id="serviceTypeDiv" class="col-sm-6">
                                    <p class="header blue lighter smaller" style="margin:5px">Loại Dịch Vụ:</p>
                                    <div>
                                        <select onchange="choseTypeService()" name="selectTypeService" id="selectTypeService" type="typeService" class="form-control"></select>
                                    </div>
                                </div>
                            </div>
                            <div id="serviceDiv" class="form-group" style="margin-bottom: 0px">
                                <div class="col-sm-6">
                                    <p class="header blue lighter smaller" style="margin:5px">Tên Dịch Vụ:</p>
                                    <div>
                                        <select style="width:100%;" class="chosen-select" name="selectService" id="selectService" data-placeholder=" ">
                                            <option value=""></option>


                                        </select>

                                    </div>
                                </div>
                            </div>
                                                    </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <p class="header blue lighter smaller" style="margin:5px">Ngày Đăng Ký:</p>
                                <div class="input-group input-group-sm">
                                    <div>
                                        <input style="cursor: pointer; background: none repeat scroll 0 0 #fff !important" readonly="" class="form-control date-picker" id="datePickerService" type="text" data-date-format="dd/mm/yyyy" style="width:100%" />
                                    </div>
                                    <span class="input-group-addon">
                                        <i class="icon-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px">
                                <div class="col-sm-6">
                                    <p class="header blue lighter smaller" style="margin:5px">Chi Phí:</p>
                                    <div>
                                        <input name="serviceCost" value="" maxlength="9" type="text" id="serviceCost" onclick='removeMask("#serviceCost")' onblur='maskMoney("#serviceCost")' style="width:100%" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 ">
                                    <p class="header blue lighter smaller" style="margin:5px">Nội Dung:</p>
                                    <div>
                                        <textarea id="txtInvoice" spellcheck="false" name="txtDescription" id="txtDescription" class="autosize-transition form-control" style="resize: none"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-12"></div>
                    </div>
                </form>

                <div class="modal-footer no-margin-top">
                    <button class="btn btn-default pull-left" type="button" data-dismiss="modal" id="btnClose">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                    <button class="btn btn-info" id="addInvoiceBtn" type="button" data-bb-handler="confirm" onclick="addInvoiceToCus()">
                        <i class="icon-ok"></i>
                        Thêm dịch vụ
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>


    <div id="paymentPopup" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header no-padding">
                    <div class="table-header" id="paymentHeader">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <span class="white">&times;</span>
                        </button>
                        Tạo Thanh Toán:
                    </div>
                </div>

                <form class="modal-body no-padding" id="paymentValidateForm">
                    <div class="col-xs-12">
                        <div class="row">


                            <div class="col-sm-6">
                                <p class="header blue lighter smaller" style="margin:5px">Ngày Thanh Toán:</p>
                                <div class="input-group input-group-sm">
                                    <div>
                                        <input style="cursor: pointer; background: none repeat scroll 0 0 #fff !important" readonly="" class="form-control date-picker" id="datePickerPayment" type="text" data-date-format="dd/mm/yyyy" style="width:100%" />
                                    </div>
                                    <span class="input-group-addon">
                                        <i class="icon-calendar bigger-110"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" style="margin-bottom: 0px">
                                <div class="col-sm-6">
                                    <p class="header blue lighter smaller" style="margin:5px">Số Tiền:</p>
                                    <div>
                                        <input name="paymentCost" value="" maxlength="9" type="text" id="paymentCost" onclick='removeMask("#paymentCost")' onblur='maskMoney("#paymentCost")' style="width:100%" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12 ">
                                    <p class="header blue lighter smaller" style="margin:5px">Nội Dung:</p>
                                    <div>
                                        <textarea spellcheck="false" name="txtDescription" id="txtPayment" class="autosize-transition form-control" style="resize: none"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-12"></div>
                    </div>
                </form>

                <div class="modal-footer no-margin-top">
                    <button class="btn btn-default pull-left" type="button" data-dismiss="modal" id="btnClose">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                    <button class="btn btn-info" id="addPaymentBtn" type="button" data-bb-handler="confirm" onclick="addPaymentToCus()">
                        <i class="icon-ok"></i>
                        Tạo thanh toán
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
</div>

