@*List Service*@
<div class="table-responsive" id="">
    <a data-toggle="modal">
        <button onclick="" class="btn btn-primary" id="btnAdd" data-toggle="modal" href="#tblAddService">
            <i class="icon-plus"></i>
            Thêm dịch vụ mới
        </button>
    </a>
    <hr>
    <table id="tblService" class="table table-striped table-bordered table-hover" width:"100%">
        <thead>
            <tr>
                <th width="30%">Tên dịch vụ</th>
                <th width="35%">Mô tả</th>
                <th width="20%">Loại dịch vụ</th>
                <th width="15%"></th>
            </tr>
        </thead>
    </table>
</div>

@*Add Service*@
<div id="tblAddService" class="modal fade" tabindex="-1">
    <div class="modal-dialog" style="width: 65%; padding-top: 7%; min-width: 600px">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Thêm dịch vụ
                </div>
            </div>
            <div class="modal-body no-padding">
                <form id="addServiceValidateForm">
                    <div class="col-sm-12" style="margin:3% 0% 2% 0%">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label class="col-sm-4">Tên dịch vụ:<span style="color: red"> *</span></label>
                                <div class="col-sm-8">
                                    <div><input type="text" id="txtName" name="txtName" style="width: 100%" maxlength="100"/></div>
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                <label class="col-sm-4">Loại dịch vụ:<span style="color: red"> *</span></label>
                                <div class="col-sm-8">
                                    <div><select id="selectServiceType" name="selectServiceType" style="width: 100%"></select></div>
                                </div>
                            </div>
                        </div>
                        <div class="row col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2">Mô tả:</label>
                                <div class="col-sm-10">
                                    <textarea id="txtDescription" name="txtDescription" style="width: 103.5%; min-width: 526px; resize: none "></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer no-margin-top"></div>
            <div class="modal-footer no-margin-top">
                <div>
                    <button class="btn btn-grey pull-left" type="button" data-dismiss="modal">
                        <i class="icon-remove"></i>
                        Đóng
                    </button>
                    <button class="btn btn-success pull-right" type="button" id="btnAddNewService" onclick="addService()" >
                        <i class="icon-ok">
                        </i>
                        Thêm mới
                    </button>
                </div>
            </div>

        </div><!-- /.modal-content -->
    </div>
</div>
@*Service Detail*@
<div id="tblServiceDetail" class="modal fade" tabindex="-1">
    <div class="modal-dialog" style="width: 65%; padding-top: 7%; min-width: 600px">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Chi Tiết Dịch Vụ
                </div>
            </div>

            <div class="modal-body no-padding">
                <form id="updateServiceValidateForm">
                    <div class="col-sm-12" style="margin:3% 0% 2% 0%">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label class="col-sm-4">Tên dịch vụ:<span style="color: red"> *</span></label>
                                <div class="col-sm-8">
                                    <input type="text" id="detailServiceId" style="display: none" />
                                    <div><input type="text" id="detailName" name="txtName" class="editableSelect" style="width: 100%" maxlength="100"/></div>
                                </div>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label class="col-sm-4">Loại dịch vụ:<span style="color: red"> *</span></label>
                                <div class="col-sm-8">
                                    <div><select id="selectedServiceType" name="selectServiceType" class=" form-control editableSelect" style="width: 100%"></select></div>
                                </div>
                            </div>
                        </div>

                        <div class="row col-sm-12" >
                            <div class="form-group">
                                <label class="col-sm-2">Mô tả:</label>
                                <div class="col-sm-10">
                                    <textarea id="detailDescription" class="form-control editableSelect" name="txtDescription" style="width: 103.5%; min-width: 526px; resize: none "></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer no-margin-top"></div>
            <div class="modal-footer no-margin-top">
                <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" onclick="updateService()" style="display:none" id="disablebutton">
                    <i class="icon-ok"></i>
                    Lưu chỉnh sửa
                </button>
                <button class="btn  btn-primary" onclick="enablebutton()" id="enablebutton">
                    <i class="icon-edit"></i>
                    Chỉnh sửa
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

