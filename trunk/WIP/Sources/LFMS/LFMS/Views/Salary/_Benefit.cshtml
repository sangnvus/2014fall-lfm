<div id="tblAddBenefit" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Thêm trợ cấp
                </div>
            </div>
            <form class="modal-body no-padding" id="addBenefitValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên trợ cấp</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtBenefitName" name="txtBenefitName" style="width: 100%" maxlength="50" />

                            </div>
                            <div id="existBenefitError" style="display: none">
                                <span style="color: red">Tên trợ cấp đã tồn tại!</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Số tiền</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtBenefitRate" class=" form-control" name="txtBenefitRate" maxlength="9" onclick='removeMask("#txtBenefitRate")' onblur='maskMoney("#txtBenefitRate")' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>
            <div class="modal-footer no-margin-top">
                <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" type="button" data-bb-handler="confirm" id="btnAddNewCase" onclick="addNewBenefit()">
                    <i class="icon-ok"></i>
                    Thêm mới
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@*bảng để hiện view và edit*@
<div id="tblUpdateBenefit" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Chi tiết bảo hiểm
                </div>
            </div>

            <form class="modal-body no-padding" id="updateBenefitValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên trợ cấp</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txBenefitId" style="display: none" />
                                <input type="text" id="txtEditName" name="txtEditName" style="width: 100%" class="editableInput" maxlength="50"/>

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Số tiền</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtEditRate" class="editableInput form-control" maxlength="9" name="txtBenefitRate" onclick='removeMask("#txtEditRate")' onblur='maskMoney("#txtEditRate")' />
                            </div>
                        </div>
                        @*<div class="form-group">
                            <i class="icon-hand-right green"></i>
                            <a href="#" style="" id="activeBenefit" onclick="deleteBenefit()"> </a>
                        </div>*@

                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>

            <div class="modal-footer no-margin-top">
                <button class="btn btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" onclick="updateBenefit()" style="display:none" id="disablebuttonBenefit">
                    <i class="icon-ok"></i>
                    Lưu chỉnh sửa
                </button>
                <button class="btn btn-primary" onclick="enablebuttonBenefit()" id="enablebuttonBenefit">
                    <i class="icon-edit"></i>
                    Chỉnh Sửa
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
