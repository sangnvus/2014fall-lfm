<div id="tblAddAssurance" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Thêm bảo hiểm
                </div>
            </div>
            <form class="modal-body no-padding" id="addAssuranceValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên Bảo hiểm</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtAssuranceName" name="txtAssuranceName" style="width: 100%" maxlength="50"/>

                            </div>
                            <div id="existAssuranError" style="display: none">
                                <span style="color: #D16E6C">Tên bảo hiểm đã tồn tại!</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Chỉ số (%)</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtAssuranceIndex" class=" form-control" name="txtAssuranceIndex" style="resize: none" maxlength="5"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>
            <div class="modal-footer no-margin-top">
                <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" type="button" data-bb-handler="confirm" id="btnAddNewCase" onclick="addNewAssurance()">
                    <i class="icon-ok"></i>
                    Thêm mới
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@*bảng để hiện view và edit*@
<div id="tblUpdateAssurance" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Chi tiết bảo hiểm
                </div>
            </div>

            <form class="modal-body no-padding" id="updateAssuranceValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên bảo hiểm</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txAssuranceId" style="display: none" />
                                <input type="text" id="txtEditName" name="txtAssuranceName" style="width: 100%" class="editableInput" maxlength="50" />

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Chỉ số (%)</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtEditRate" class="editableInput form-control" name="txtAssuranceIndex" style="resize: none" maxlength="5" />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>

            <div class="modal-footer no-margin-top">
                <button class="btn btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" onclick="updateAssurance()" style="display:none" id="disablebuttonAssuran">
                    <i class="icon-ok"></i>
                    Lưu chỉnh sửa
                </button>
                <button class="btn btn-primary" onclick="enablebuttonAssuran()" id="enablebuttonAssuran">
                    <i class="icon-edit"></i>
                    Chỉnh Sửa
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
