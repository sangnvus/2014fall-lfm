<div id="tblAddImpress" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Thêm tạm ứng
                </div>
            </div>
            <form class="modal-body no-padding" id="addImpressValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group" style="margin:0">
                            <label>Tên nhân viên</label><span style="color: red"> *</span>
                            <div>
                                <select id="selectStaffImpress" class="form-control editableInput" name="selectStaffImpress" style="width: 100%"></select><br />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Ngày ứng</label><span style="color: red"> *</span>

                            <div class="input-group input-group-sm">
                                <input class="form-control date-picker editableInput" id="dateStaffImpress" name="dateStaffImpress" readonly="" type="text" data-date-format="dd/mm/yyyy" style="width: 100%; cursor: pointer; background: none repeat scroll 0 0 #fff !important" />
                                <span class="input-group-addon">
                                    <i class="icon-calendar bigger-110"></i>
                                </span>
                            </div>
                            <div id="invalidateMonthError" style="display: none">
                                <span style="color: red">Chỉ được chọn tháng hiện tại!</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Số tiền</label><span style="color: red"> *</span>
                            <div>
                                @*<input id="txtmoneyImpress" class=" form-control" name="txtmoneyImpress" maxlength="9" />*@
                                <input type="text" id="txtmoneyImpress" class=" form-control" name="txtmoneyImpress" maxlength="9" onclick='removeMask("#txtmoneyImpress")' onblur='    maskMoney("#txtmoneyImpress")' />
                             </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>
            <div class="modal-footer no-margin-top">
                <button class="btn  btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" type="button" data-bb-handler="confirm" id="btnAddNewCase" onclick="addNewIpress()">
                    <i class="icon-ok"></i>
                    Thêm mới
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@*bảng để hiện view và edit*@
<div id="tblUpdateImpress" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header no-padding">
                <div class="table-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="white">&times;</span>
                    </button>
                    Chi tiết tạm ứng
                </div>
            </div>

            <form class="modal-body no-padding" id="updateImpressValidateForm">
                <div class="col-sm-12">
                    <div>
                        <br />
                        <div class="form-group">
                            <label>Tên nhân viên</label><span style="color: red"> *</span>
                            <div>
                                <input type="text" id="txtImpressId" style="display: none" />
                                <select id="txtEditName" class="form-control editableInput" name="selectStaffImpress" style="width: 100%"></select><br />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ngày ứng</label><span style="color: red"> *</span>
                            <div class="input-group input-group-sm">
                                <input class="form-control date-picker editableSelect" id="txtEditDate" name="dateStaffImpress" type="text" data-date-format="dd/mm/yyyy" style="width: 100%; cursor: pointer;" />

                                <span class="input-group-addon">
                                    <i class="icon-calendar bigger-110"></i>
                                </span>
                            </div>
                            <div id="invalidateMonthErrorEdit" style="display: none">
                                <span style="color: red">Chỉ được chọn tháng hiện tại!</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Số tiền </label><span style="color: red"> *</span>
                            <div>
                                @*<input type="text" id="txtEditMoney" class="editableInput form-control" name="txtmoneyImpress" />*@
                                <input type="text" id="txtEditMoney" class=" editableInput form-control" name="txtmoneyImpress" maxlength="9" onclick='removeMask("#txtEditMoney")' onblur='    maskMoney("#txtEditMoney")' />

                              </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer no-margin-top">
                </div>
            </form>

            <div class="modal-footer no-margin-top">
                <button class="btn btn-grey pull-left" type="button" data-dismiss="modal">
                    <i class="icon-remove"></i>
                    Đóng
                </button>
                <button class="btn btn-success" onclick="updateImpress()" style="display:none" id="disablebuttonImpress">
                    <i class="icon-ok"></i>
                    Lưu chỉnh sửa
                </button>
                <button class="btn btn-primary" onclick="enablebuttonImpress()" id="enablebuttonImpress">
                    <i class="icon-edit"></i>
                    Chỉnh Sửa
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
